@page
@model RazorPagesTutorial.Pages.Person.EditModel
@{
}

<partial name="_Message" />

<div>
    <h3>Edit Person</h3>
    <form asp-action="Edit">
        <input type="hidden" asp-for="Person.Id" class="form-control" />

        <div class="form-group">
            <lable asp-for="Person.Name"></lable>
            <input asp-for="Person.Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Person.Name"></span>
        </div>
        <div class="form-group">
            <lable asp-for="Person.Email"></lable>
            <input asp-for="Person.Email" class="form-control" />
            <span class="text-danger" asp-validation-for="Person.Email"></span>
        </div>
        <div class="my-2">
            <button class="btn btn-primary">Update</button>
            <a asp-page="DisplayAll" class="btn btn-success">All records</a>
        </div>
    </form>
</div>